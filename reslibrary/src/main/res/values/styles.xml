<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="actionMenuTextColor">@color/colorBackGroundWhiteC1</item>

        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>

        <item name="android:textColorPrimary">@color/colorBackGroundWhiteC1</item>

        <!--设置标题的颜色 -->


        <!--<item name="colorControlNormal">@color/black</item>-->

    </style>


    <style name="MenuTextStyle">

        <item name="android:textColor">@android:color/white</item>

        <item name="android:textSize">20sp</item>

    </style>

    <!--主页筛选按钮样式-->
    <style name="home_filter_rad">
        <item name="android:textColor">@drawable/text_change_color</item>
    </style>

    <style name="rad_main">
        <item name="android:textColor">@drawable/text_change_checker</item>
        <item name="android:textSize">@dimen/font_input</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="input">
        <item name="android:background">@drawable/input_border_selecter</item>
        <item name="android:textSize">@dimen/font_input</item>
        <item name="android:textColor">@color/font_input</item>
        <item name="android:textColorHint">@color/font_input_hint</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
</resources>