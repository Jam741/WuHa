<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/mine_top_bg"
                    app:layout_collapseParallaxMultiplier="0.5" />

                <TextView
                    android:id="@+id/tx_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionBarSize"
                    android:background="@color/colorBackGroundWhiteC1"
                    android:drawableLeft="@mipmap/home_icon_address"
                    android:drawablePadding="@dimen/margin_size_10"
                    android:drawableRight="@mipmap/home_icon_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_left_right"
                    android:paddingRight="@dimen/margin_left_right"
                    android:text="成都市高新区天府二街天府鹭洲"
                    android:textColor="@color/colorGrayC1"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBarSize"
                android:orientation="horizontal"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="@dimen/margin_size_40"
                    android:layout_marginRight="@dimen/margin_size_40"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_size_16"
                        android:drawableLeft="@mipmap/home_icon_search"
                        android:drawablePadding="@dimen/margin_size_10"
                        android:gravity="center_vertical"
                        android:text="搜索你感兴趣的"
                        android:textColor="@color/colorWhiteC1" />

                </LinearLayout>
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.design.widget.TabLayout
            android:id="@+id/tab_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarSize"
            android:layout_marginTop="@dimen/margin_size_10"
            android:background="@color/colorBackGroundWhiteC1"
            app:tabIndicatorHeight="3dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackGroundWhiteC1" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>