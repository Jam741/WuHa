<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundGrayC1"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorAccent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/img_bg"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:background="@mipmap/mine_top_bg"
                    app:layout_collapseParallaxMultiplier="0.5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@color/colorBackGroundWhiteC1">

                    <TextView
                        android:id="@+id/site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/view"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:drawableLeft="@mipmap/home_icon_address2"
                        android:drawablePadding="@dimen/margin_size_10"
                        android:text=""
                        android:textColor="@color/colorGrayC1"
                        android:textSize="@dimen/margin_size_14" />

                    <TextView
                        android:id="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/site"
                        android:layout_marginLeft="@dimen/margin_size_34"
                        android:layout_marginTop="@dimen/margin_size_8"
                        android:text=""
                        android:textColor="@color/colorGrayC1"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_toLeftOf="@+id/view"
                        android:text=""
                        android:textColor="@color/colorGrayC1"
                        android:textSize="@dimen/text_size_12" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_toLeftOf="@+id/shop_goto"
                        android:background="#dddddd" />

                    <TextView
                        android:id="@+id/shop_goto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:text="去这里"
                        android:textColor="#5ba8f4"
                        android:textSize="@dimen/text_size_12" />
                </RelativeLayout>

            </LinearLayout>


            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBarSize"
                app:layout_collapseMode="pin">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/shop_return"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/margin_left_right"
                        android:src="@mipmap/home_return" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:text="Chris Li宠物店"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_size_18" />

                    <ImageView
                        android:id="@+id/collect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:padding="@dimen/margin_left_right"
                        android:src="@mipmap/home_icon_collect" />
                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarSize"
            android:layout_marginTop="@dimen/margin_size_10"
            android:background="@color/colorBackGroundWhiteC1" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/colorBackGroundWhiteC1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FDC317"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/home_icon_phone"
                android:drawablePadding="@dimen/margin_size_10"
                android:text="拨打电话"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F35A5A"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/home_icon_share"
                android:drawablePadding="@dimen/margin_size_10"
                android:text="分享"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>